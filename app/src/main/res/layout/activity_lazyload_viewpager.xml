<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h50"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.cxh.note.widget.CustomRadioButton
            android:id="@+id/rb1"
            android:drawableTop="@mipmap/home_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.cxh.note.widget.CustomRadioButton
            android:id="@+id/rb2"
            android:button="@null"
            android:layout_width="0dp"
            android:gravity="center"
            android:drawableTop="@mipmap/customer_default"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.cxh.note.widget.CustomRadioButton
            android:id="@+id/rb3"
            android:drawableTop="@mipmap/report_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.cxh.note.widget.CustomRadioButton
            android:id="@+id/rb4"
            android:drawableTop="@mipmap/set_default"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rg" />


</RelativeLayout>